(proj "Pharen"
    {"description" "Lisp -> PHP Compiler"
     "version" "0.1.5"})

(task "build" "Compiling all project files written in Pharen"
      (compile-dir (project-path "/lib/pharen") (compile-except [(project-path "/lib/phake/phake.phn")])))

(task "test" "Running tests for Pharen compiler"
      (compile-file (project-path "/test/pharen_tests.phn"))
      (require (project-path "/test/pharen_tests.php"))
      TRUE)
