(require "test.php")
(require-once "path.php")

(define "TESTS_DIR" (dirname __FILE__))
(require-once (path-join TESTS-DIR "../.." "pharen.php"))

(fn run-test (fname)
    (compile-file (. TESTS-DIR "/tests/" fname ".phn") (. TESTS-DIR "/tmp"))
    (require (. TESTS-DIR "/tmp/" fname ".php")))
    

(let [tests [
        "literals",
        "func_calls",
        "comments",
        "bindings",
        "lists_and_dicts",
        "cond",
        "if",
        "function_definition",
        "lambdas",
        "macros",
        "oop"
    ]]

  (describe "Pharen"
      (lambda ()
          (map #run-test tests))))
